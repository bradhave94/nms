{
	"extends": "astro/tsconfigs/base",
	"compilerOptions": {
	  "baseUrl": ".",
	  "paths": {
		"@*": ["./src/*"]
	  },
	  "strict": true,
	  "noUnusedLocals": true,
	  "noUnusedParameters": true,
	  "noImplicitReturns": true,
	  "noFallthroughCasesInSwitch": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", ".astro"]
  }