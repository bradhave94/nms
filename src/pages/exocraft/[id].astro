---
import Layout from '@layouts/Layout.astro';
import Page from '@layouts/Page.astro';
import { SITE } from '@config';
import type { Item } from '@utils/lookup.js';
import { buildItemMeta } from '@utils/seo.js';
import data from '@datav2/Exocraft.json';

export async function getStaticPaths() {
	return data.map((exocraft) => ({
		params: { id: exocraft.Id.toString() },
		props: { item: exocraft },
	}));
}

const { item } = Astro.props;

const { title, description } = buildItemMeta(item as Item, 'Exocraft Item');
const ogImage = `${SITE.imageBaseUrl}${item.Icon}`;
---

<Layout {title} {description} slug="exocraft" {ogImage}>
	<Page item={item as Item} />
</Layout>
