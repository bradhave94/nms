---
import Layout from '@layouts/Layout.astro';
import Page from '@layouts/Page.astro';
import type { Item } from '@utils/lookup.js';
import data from '@datav2/Exocraft.json';

export async function getStaticPaths() {
	return data.map((exocraft) => ({
		params: { id: exocraft.Id.toString() },
		props: { item: exocraft },
	}));
}

const { item } = Astro.props;

const title = `${item.Name} | No Man's Sky Recipes`;
const description = `${item.Name} | ${item.Description}`;
---

<Layout {title} {description} slug="exocraft">
	<Page item={item as Item} />
</Layout>
