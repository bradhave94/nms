---
import Layout from '@layouts/Layout.astro';
import Page from '@layouts/Page.astro';
import { SITE } from '@config';
import type { Item } from '@utils/lookup.js';
import { buildItemMeta } from '@utils/seo.js';
import others from '@datav2/Others.json';
import trade from '@datav2/Trade.json';

export async function getStaticPaths() {
	return [...others, ...trade].map((post) => ({
		params: { id: post.Id.toString() },
		props: { item: post },
	}));
}

const { item } = Astro.props;
const { title, description } = buildItemMeta(item as Item, 'No Man\'s Sky Item');
const ogImage = `${SITE.imageBaseUrl}${item.Icon}`;
---

<Layout
	{title}
	{description}
	slug="other"
	{ogImage}
>
<Page item={item as Item} />
</Layout>