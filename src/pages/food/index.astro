---
import Layout from '@layouts/Layout.astro';
import CompactCard from '@components/CompactCard.astro';
import Pagination from '@components/Pagination.astro';
import Breadcrumbs from '@components/Breadcrumbs.astro';
import { getSlug, sort } from '@utils/lookup.js';
import { buildCollectionStructuredData, getSiteOrigin } from '@utils/structuredData.js';
import { buildCategoryBreadcrumbs, buildCategoryIntro, buildPaginatedMeta } from '@utils/seo.js';
import type { Item } from '@utils/lookup.js';
import data from '@datav2/Food.json';

const pageSize = 80;
const sortedFood = sort(data as Item[]);
const pageData = sortedFood.slice(0, pageSize);
const lastPage = Math.max(1, Math.ceil(sortedFood.length / pageSize));
const page = {
	data: pageData,
	currentPage: 1,
	lastPage,
	url: {
		next: lastPage > 1 ? '/food/2' : undefined,
	},
};

const siteOrigin = getSiteOrigin(Astro.site, Astro.url);
const canonicalUrl = new URL('/food', siteOrigin).toString();
const itemListElements = page.data.map((item, index) => ({
	name: item.Name,
	url: `${siteOrigin}${getSlug(item)}`,
	position: index + 1,
}));
const structuredData = buildCollectionStructuredData({
	siteOrigin,
	canonicalUrl,
	collectionName: 'Food',
	collectionDescription: "A list of food items for No Man's Sky. Browse all edible products and ingredients.",
	collectionPath: '/food',
	firstPagePath: '/food',
	currentPage: page.currentPage,
	items: itemListElements,
});
const breadcrumbs = buildCategoryBreadcrumbs('Food', '/food', page.currentPage, '/food');
const intro = buildCategoryIntro(
	'Food items power cooking recipes, consumables, and nutrient processing chains in No Man\'s Sky.',
	page.currentPage,
	page.lastPage
);
const baseDescription = "A list of food items for No Man's Sky. Browse all edible products and ingredients.";
const { title, description } = buildPaginatedMeta('Food', baseDescription, page.currentPage, page.lastPage);
---

<Layout
	{title}
	{description}
	slug="food"
	structuredData={structuredData}
>
	<Breadcrumbs items={breadcrumbs} className="pt-3 mb-6" />
	<h1 class="text-center text-4xl sm:text-6xl my-12">Food</h1>
	<p class="mx-auto mb-8 max-w-3xl text-center text-sky-200/90">{intro}</p>
	<div id="items" class="grid grid-cols-2 gap-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 xl:grid-cols-8">
		{
			page.data.map((item, index) => (
				<CompactCard
					card={{
						name: item.Name,
						image: 'https://nomansskyrecipes.com/images/items/' + item.Icon,
						link: getSlug(item),
					}}
					index={index}
				/>
			))
		}
	</div>
	<Pagination page={page} />
</Layout>
