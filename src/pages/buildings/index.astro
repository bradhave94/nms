---
import Layout from '@layouts/Layout.astro';
import Card from '@components/Card.astro';
import Search from '@components/Search.astro';
import { getSlug, sort } from '@utils/lookup.js';
import data from '@data/Buildings.json';
let sortData = sort(data);
---

<Layout
	title="Buildings | No Man's Sky Refiner Recipes, Crafting Guide and Cooking Guide"
	slug="/buildings">
	<h1 class="text-center text-4xl sm:text-6xl mt-2">Buildings</h1>
	<Search />
	<div id="items" class="grid grid-cols-1 gap-4 sm:grid-cols-2">
		{
			sortData.map((item) => (
				<Card
					card={{
						name: item.Name,
						description: item.Description,
						button: 'View Item',
						image: 'https://app.nmsassistant.com/assets/images/' + item.Icon,
						link: getSlug(item.Id) + item.Id,
						value: item.BaseValueUnits,
					}}
				/>
			))
		}
	</div>
</Layout>
