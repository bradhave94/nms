---
import Layout from '@layouts/Layout.astro';
import Page from '@layouts/Page.astro';
import { SITE } from '@config';
import { getById } from '@utils/lookup.js';
import type { Item } from '@utils/lookup.js';
import { buildItemMeta } from '@utils/seo.js';
import buildings from '@datav2/Buildings.json';

export function getStaticPaths() {
	return buildings.map((building) => ({
		params: { id: building.Id.toString() }
	}));
}

const { id } = Astro.params;
const item = getById(id);

if (!item) {
	return Astro.redirect('/404');
}

const { title, description } = buildItemMeta(item as Item, 'Building Part');
const ogImage = `${SITE.imageBaseUrl}${item.Icon}`;
---

<Layout
	{title}
	{description}
	slug="buildings"
	{ogImage}
>
	<Page item={item as Item} />
</Layout>