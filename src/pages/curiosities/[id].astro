---
import Layout from '@layouts/Layout.astro';
import Page from '@layouts/Page.astro';
import type { Item } from '@utils/lookup.js';
import { buildItemMeta } from '@utils/seo.js';
import data from '@datav2/Curiosities.json';

export async function getStaticPaths() {
	return data.map((post) => ({
		params: { id: post.Id.toString() },
		props: { item: post },
	}));
}

const { item } = Astro.props;

const { title, description } = buildItemMeta(item as Item, 'Curiosity');
---

<Layout {title} {description} slug="curiosities">
	<Page item={item as Item} />
</Layout>