---
import { Image } from 'astro:assets'
import Accordion from '@components/Accordion.astro';
import { getSlug } from '@utils/lookup.js';

interface Item {
  Id: string;
  Name: string;
  Icon: string;
  Quantity: number;
  RequiredItems?: Item[];
}

interface Props {
  items: {
    RequiredItems?: Item[];
    Quantity?: number;
  };
}

const { items } = Astro.props;
---

{items.RequiredItems?.map((item) => {
  const quantity = item.Quantity * (items.Quantity || 1);
  return item.RequiredItems?.length ? (
    <Accordion>
      <div class="flex" slot="title">
        <div class="m-3">
          <a class="flex hover:underline" href={`${getSlug(item.Id)}${item.Id}`}>
            <div class="mr-4 flex-shrink-0 self-start">
              <Image
                src={`https://app.nmsassistant.com/assets/images/${item.Icon}`}
                alt={item.Name}
                sizes="50px"
                width={50}
                height={50}
              />
            </div>
            <div>
              <h4 class="lg:text-lg mt-1">
                {item.Name} x<span data-quantity={item.Quantity}>{item.Quantity}</span>
              </h4>
            </div>
          </a>
        </div>
      </div>
      <div slot="content">
        <Astro.self items={item} />
      </div>
    </Accordion>
  ) : (
    <div class="m-3">
      <a class="flex hover:underline" href={`${getSlug(item.Id)}${item.Id}`}>
        <div class="mr-4 flex-shrink-0 self-start">
          <Image
            src={`https://app.nmsassistant.com/assets/images/${item.Icon}`}
            alt={item.Name}
            sizes="50px"
            width={50}
            height={50}
          />
        </div>
        <div>
          <h4 class="lg:text-lg mt-1">
            {item.Name} x<span data-quantity={quantity}>{quantity}</span>
          </h4>
        </div>
      </a>
    </div>
  );
})}