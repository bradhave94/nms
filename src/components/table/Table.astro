---
import '../../assets/css/tabulator.css';
import TableHead from '@components/table/Head.astro';
import TableCell from '@components/table/Cell.astro';
import { Image } from 'astro:assets';

interface Column {
  title: string;
  field: string;
}

type CellData = {
  id: string;
  name: string;
  amount?: number;
  colour: string;
  image?: string;
  description?: string;
  value?: number;
};

export interface TableRow {
  input_1: object;
  input_2?: object;
  input_3?: object;
  output: object;
  description?: string;
  value?: number;
  [key: string]: unknown;
}

export interface Props {
  title: string;
  image: string;
  image_width: number;
  image_height: number;
  columns: Column[];
  sort?: string;
  data: TableRow[];
}

const { title, image, image_width, image_height, columns, sort = 'output', data } = Astro.props;
---

<style>
  .table-wrapper {
    opacity: 1;
    transition: opacity 0.5s ease-in-out;
  }
  .d-hidden {
    opacity: 0;
    height: 500px;
    overflow: hidden;
  }
</style>

<div class="table-wrapper d-hidden" data-layout="table" data-astro-transition-persist="table-wrapper">
  <div
    class="card-header p-4 relative flex lg:flex-row flex-col gap-5 items-center justify-between bg-center before:bg-black/80 before:w-full before:h-full before:absolute before:left-0 before:top-0"
    style="background-image: url(/images/resources.png)"
  >
    <div class="flex items-center gap-2 z-10 relative">
      <Image
        class="logo"
        src={import(`../../assets/img/${image}.png`)}
        sizes={`${image_width}px`}
        width={image_width}
        height={image_height}
        alt={title}
      />
      <h1 class="text-2xl">{title}</h1>
    </div>

    <div class="relative text-center">
      <div class="flex gap-2 justify-center">
        <p>Layout:</p>
        <div>
          <a
            href={`/${image}`}
            class="block cursor-pointer select-none rounded-md px-2 transition-colors bg-blue-500 text-black border border-blue-500 peer-checked:bg-blue-500 peer-checked:text-black"
          >
            Table
          </a>
        </div>
        <div>
          <a
            href={`/${image}/cards`}
            class="block cursor-pointer select-none rounded-md px-2 border transition-colors hover:bg-blue-500 hover:text-black border-blue-500 peer-checked:bg-blue-500 peer-checked:text-black"
          >
            Cards
          </a>
        </div>
      </div>
    </div>

    <div class="flex items-center z-10">
      <div class="tabulator-search relative">
        <input
          class="rounded-md w-full bg-black border-blue-500 focus:border-blue-500 focus:ring-blue-500 peer"
          required
          type="text"
          id="search"
          name="search"
          placeholder=""
        />
        <label
          class="absolute top-1/2 -translate-y-1/2 left-3 peer-focus:opacity-0 peer-valid:opacity-0"
          for="search">Search</label
        >
      </div>
    </div>
  </div>
  <table id="table" data-columns={JSON.stringify(columns)} data-sort={sort}>
    <TableHead columns={columns} />
    <tbody>
      {data.map((row) => (
        <tr>
          {columns.map((column) => (
            <TableCell cell={row[column.field] as CellData | string | number} />
          ))}
        </tr>
      ))}
    </tbody>
  </table>
</div>

<script>
  import { TabulatorFull as Tabulator } from 'tabulator-tables';
  type ColumnData = { title: string; field: string };
  type SortValue = string | number | null | undefined;

  const parseSortNumber = (value: SortValue): number => {
    if (typeof value === 'number' && !Number.isNaN(value)) {
      return value;
    }

    if (typeof value !== 'string') {
      return Number.NEGATIVE_INFINITY;
    }

    // Prefer explicit hidden sort value when present in the HTML cell.
    const hiddenSortMatch = value.match(
      /<span[^>]*class=["'][^"']*sort[^"']*["'][^>]*>(-?\d+(?:\.\d+)?)<\/span>/i,
    );
    if (hiddenSortMatch?.[1]) {
      return Number(hiddenSortMatch[1]);
    }

    // Fallback to text extraction to support non-HTML/edge-case values.
    const textOnly = value.replace(/<[^>]*>/g, '').replace(/,/g, '').trim();
    const parsed = Number(textOnly);
    if (!Number.isNaN(parsed)) {
      return parsed;
    }

    const firstNumber = textOnly.match(/-?\d+(?:\.\d+)?/);
    return firstNumber?.[0] ? Number(firstNumber[0]) : Number.NEGATIVE_INFINITY;
  };

  // Use requestAnimationFrame to defer execution until after React hydration
  requestAnimationFrame(() => {
    const tableElement = document.getElementById('table') as HTMLTableElement;
    if (!tableElement) return;

    const sort = tableElement.dataset.sort;
    let columns;
    try {
      columns = JSON.parse(tableElement.dataset.columns || '[]').map((element: ColumnData) => ({
      title: element.title,
      field: element.field,
      sorterParams: {
        alignEmptyValues: 'bottom',
      },
      formatter: 'html',
      sorter:
        sort === element.field && sort === 'value'
          ? (a: SortValue, b: SortValue) => parseSortNumber(a) - parseSortNumber(b)
          : undefined,
    }));
    } catch (error) {
      console.error('Failed to parse table columns:', error);
      return;
    }

    const table = new Tabulator('#table', {
      columns,
      initialSort: [{ column: sort, dir: sort !== 'value' ? 'asc' : 'desc' }],
      layout: 'fitColumns',
      pagination: true,
      paginationSize: 10,
      paginationSizeSelector: [10, 25, 50, 100, true],
      paginationCounter: 'rows',
      placeholder: 'No results found',
      printAsHtml: true,
    });

    table.on('dataLoaded', function () {
      if (table.element?.parentElement) {
        table.element.parentElement.classList.remove('d-hidden');
      }
    });

    function matchAny(data: Record<string, unknown>, filterParams: { value: string }) {
      // Escape special regex characters to prevent ReDoS attacks
      const escapedValue = filterParams.value.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
      const regex = new RegExp(escapedValue, 'i');
      return Object.values(data).some((value) => regex.test(String(value)));
    }

    const input = document.getElementById('search') as HTMLInputElement;
    if (input) {
      let debounceTimer: ReturnType<typeof setTimeout> | undefined;
      input.addEventListener('keyup', function () {
        if (debounceTimer) {
          clearTimeout(debounceTimer);
        }
        debounceTimer = setTimeout(() => {
          if (input.value.trim() === '') {
            table.clearFilter();
          } else {
            table.setFilter(matchAny, { value: input.value });
          }
        }, 150);
      });
    }
  });
</script>
