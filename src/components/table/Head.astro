---
export interface Props {
	columns: Array<{
		title: string;
		field: string;
	}>;
}

const { columns } = Astro.props;
---

<thead>
	<tr>
		{columns.map((column) => (
			<th>{column.title}</th>
		))}
	</tr>
</thead>

<style>
	th {
		padding: 0.5rem;
		text-align: left;
		font-weight: bold;
	}
</style>