---
const card = Astro.props.card;


---

<article class="flex flex-wrap transition hover:shadow-xl bg-black border-2 border-orange-500 rounded-md">
	<div class="rotate-180 p-2 [writing-mode:_vertical-lr]">
		<time
			datetime="2022-10-10"
			class="flex items-center justify-between gap-4 text-xs font-bold uppercase text-white"
		>
			<span>Recipes</span>
			<span class="w-px flex-1 bg-white/10"></span>
			<span>{card.items}</span>
		</time>
	</div>

	<div class="hidden sm:block sm:basis-56">
		<img
			alt="Guitar"
			src={card.image}
			class="aspect-square h-full w-full object-cover p-1"
		/>
	</div>

	<div class="flex flex-1 flex-col justify-between">
		<div class="border-l p-4 border-white/10 sm:!border-l-transparent sm:p-6">
			<a href={card.link}>
				<h3 class="font-bold text-3xl tracking-wider text-white">
					{card.name}
				</h3>
			</a>

			<p class="mt-2 leading-relaxed xl:tracking-wider text-sm xl:text-base text-gray-200">
				{card.description}
			</p>
		</div>

		<div class="sm:flex sm:items-end sm:justify-end">
			<a
				href={card.link}
				class="block tracking-wider bg-orange-500 px-5 py-3 text-center rounded-br-md text-xs font-bold uppercase text-gray-900 transition hover:bg-orange-700 relative -bottom-[1px] -right-[1px]"
			>
				{card.button}
			</a>
		</div>
	</div>
</article>
