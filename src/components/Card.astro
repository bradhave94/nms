---
import { Picture } from '@astrojs/image/components';

import credit from '../assets/img/credits.png';
const {card, hide} = Astro.props;
---

<article class="flex flex-wrap flex-col 2xl:flex-row transition hover:shadow-xl bg-black rounded-md overflow-hidden">
	<div class="sm:basis-56">
		<img
			alt="Guitar"
			src={card.image}
			class="aspect-square h-full w-full object-contain p-1"
		/>
	</div>

	<div class="flex flex-1 flex-col justify-between">
		<div class="border-l p-4 border-white/10 sm:!border-l-transparent sm:p-6">
			<a href={card.link}>
				<h2 class="font-bold text-3xl tracking-wider text-white">
					{card.name}
				</h2>
				{card.value ?
				<p class="flex items-center gap-2 py-2 pb-4">
					<Picture
						src={credit}
						alt="Credits"
						widths={[25]}
						aspectRatio="1:1"
						sizes="25px"
						width={25}
						height={25}
						background={null}
					/>
					{card.value}
				</p> : null}
			</a>

			<p class="mt-2 leading-relaxed xl:tracking-wider text-sm xl:text-base text-gray-200">
				{card.description}
			</p>
		</div>

		<div class="sm:flex sm:items-end sm:justify-end">
			<a
				href={card.link}
				class="block tracking-wider bg-orange-500 px-5 py-3 text-center text-xs font-bold text-gray-900 transition hover:bg-orange-700"
			>
				{card.button}
			</a>
		</div>
	</div>
</article>
